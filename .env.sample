# Copy to .env and edit values. Keep configuration in .env.
# IMPORTANT: Use .env.sample instead of .env.example per workspace conventions.

# Absolute path to a .git directory OR to a work tree path (repo root).
# If a work tree path is provided, the tool will resolve its .git directory.
GIT_EVAL_GIT_DIR=

# Output directory for reports (will be created if missing).
OUTPUT_DIR=./outputs

# Timezone for date grouping; use an IANA tz name (fallback: system tz)
TIMEZONE=

# Session gap in minutes for grouping commits into work sessions (for hour estimation)
SESSION_GAP_MINUTES=90

# Max hours per day cap when estimating (to avoid absurd values)
MAX_HOURS_PER_DAY=10

# Whether to include merge commits in statistics: 1=yes, 0=no
INCLUDE_MERGES=1

